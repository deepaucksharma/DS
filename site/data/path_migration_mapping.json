        "systems/*/request-flow.md",
        "systems/*/storage-architecture.md",
        "systems/*/failure-domains.md",
        "systems/*/scale-evolution.md",
        "systems/*/cost-breakdown.md",
        "systems/*/novel-solutions.md",
        "systems/*/production-operations.md"
